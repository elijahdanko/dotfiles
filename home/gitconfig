[user]
    email = me@eli.net
    name = Elijah Danko
[init]
    defaultBranch = master
[core]
    editor = emacsclient -nw
[diff]
    tool = ediff
[difftool "ediff"]
    cmd = emacsclient -nw --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[merge]
    tool = ediff
[mergetool "ediff"]
    cmd = emacsclient -nw --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$BASE\\\" \\\"$REMOTE\\\" \\\"$MERGED\\\")\"

[includeIf "gitdir:~/gitlab.com/"]
    path = ~/.gitconfig-gitlab
